{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // alias
    "paths": {
      "@otypes/*": ["./packages/otypes/src/*"],
      "@public/*": ["./public/*"],
      "@app/*": ["./apps/*"],
      // "@packages/*": ["./packages/*"],
      "@outils/*": ["./packages/outils/src/*"],
      "@ohooks/*": ["./packages/ohooks/src/*"],
      "@oapis/*": ["./packages/oapis/src/*"],
      "@oweb/*": ["./packages/oweb/src/*"],
      "@oconstants/*": ["./packages/oconstants/src/*"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "apps/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "./components.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
